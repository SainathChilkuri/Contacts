<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_a_contact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="Add a Contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_contacts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Show Contacts"
        app:layout_constraintEnd_toEndOf="@+id/add_a_contact"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_a_contact"
        app:layout_constraintTop_toBottomOf="@+id/add_a_contact" />

    <Button
        android:id="@+id/edit_contact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Edit Contact"
        app:layout_constraintEnd_toEndOf="@+id/show_contacts"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/show_contacts"
        app:layout_constraintTop_toBottomOf="@+id/show_contacts" />

</androidx.constraintlayout.widget.ConstraintLayout>